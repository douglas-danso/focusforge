# Mobile Service Environment Configuration  
# Copy this file to mobile/.env and update with your values

# API Backend URL
FLUTTER_API_URL=http://localhost:8000/api/v1

# WebSocket URL for real-time features
FLUTTER_WEBSOCKET_URL=ws://localhost:8000/ws

# Environment
FLUTTER_ENV=development

# App Configuration
FLUTTER_APP_NAME=FocusForge
FLUTTER_APP_VERSION=1.0.0

# Development Settings
FLUTTER_DEBUG=true
FLUTTER_ENABLE_HOT_RELOAD=true

# Optional: Push Notifications (when implemented)
FLUTTER_FCM_SERVER_KEY=
FLUTTER_FCM_SENDER_ID=

# Optional: Analytics (when implemented)  
FLUTTER_ANALYTICS_ID=
FLUTTER_CRASHLYTICS_ENABLED=false
